{% extends 'base.html.twig' %}

{% block body %}
	<main role="main" class="container mt-5" >
		<div class="row" >
			<div class="col-md-8 blog-main" >
				
				<div class="blog-post" >
					<h2 class="blog-post-title" >{{ post.title }}</h2 >
					<p class="blog-post-meta" >{{ post.publishedAt | date('d/m/Y') }} par
						<a href="#" >{{ post.author }}</a ></p >
					
					<p >{{ post.content }}</p >
				
				</div ><!-- /.blog-post -->
				
				
				<div class="container card p-1 mt-5" >
					<div class="row d-flex justify-content-center" >
						<div class="col-md-12" >
							<div class="headings d-flex justify-content-between align-items-center mb-3" >
								<h5 >Commentaires non lus({{ post.comments | length }})</h5 >
							</div >
						<div class="card-header" >
							{{ form_start(form) }}
							{{ form_row(form.author) }}
							{{ form_row(form.content) }}
							<button class="btn btn-outline-primary mt-1" type="submit" >Envoyer</button >
							{{ form_end(form) }}
						</div >
							<div class="card-body">
						{% for comment in post.comments %}
							<div class="card p-3 mt-2" >
								<div class="d-flex justify-content-between align-items-center" >
									<div class="user d-flex flex-row align-items-center" >
										<img src="https://i.imgur.com/hczKIze.jpg" width="30" class="user-img rounded-circle mr-2" >
										<span ><small class="font-weight-bold text-primary" >{{ comment.author }}</small > <small class="font-weight-bold" >{{ comment.content }}</small ></span >
									</div >
									<small >{{ comment.postedAt | date ('d/m/Y') }}</small >
								</div >
								<div class="action d-flex justify-content-between mt-2 align-items-center" >
									<div class="reply px-4" ><small >Supprimer</small > <span class="dots" ></span >
										<small >RÃ©pondre</small > <span class="dots" ></span ></div >
									<div class="icons align-items-center" ><i class="fa fa-star text-warning" ></i >
										<i class="fa fa-check-circle-o check-icon" ></i ></div >
								</div >
							</div >
						
						{% endfor %}
							</div>
					</div >
				</div >
			</div >
			
			
			<nav class="blog-pagination mt-2" >
				<a class="btn btn-outline-primary" href="#" >Older</a >
				<a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true" >Newer</a >
			</nav >
		
		</div ><!-- /.blog-main -->
		
		<aside class="col-md-4 blog-sidebar" >

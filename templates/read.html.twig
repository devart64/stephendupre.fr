{% extends 'base.html.twig' %}

{% block body %}
<h3><a href="">{{ post.title }}</a></h3>
<p>{{ post.content }}</p>
	<hr>
	{{ form_start(form) }}
		{{ form_row(form.author) }}
		{{ form_row(form.content) }}
	<button type="submit">Envoyer</button>
	{{ form_end(form) }}
	<ul>
		{% for comment in post.comments %}
			<li>
				<b>{{ comment.author }}</b><em> le {{ comment.postedAt | date ('d/m/Y') }}</em>
				<p>{{ comment.content }}</p>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
